<script>
function _(x){return document.getElementById(x);}
var ba, bi=0, intrvl;
var bca = [
  '<h2>@aaron</h2><p>Everybody tweet it!</p>',
  '<h2>@chris</h2><p>It\'s raining outside.</p>',
  '<h2>@david</h2><p>I\'m hella f***in\' cool</p>',
  '<h2>@jeremy</h2><p>Moving to Silicon Valley to get married to programming and make beautiful startup babies</p>',
  '<h2>@baron</h2><p>Who do you turn this one?</p>',
  '<h2>@kyle</h2><p>Who\'s trying to get some food truck today?</p>'
];
function bubbles(bi){
  // Fade-out the content
  _("bubblecontent").style.opacity = 0;
  for(var i=0; i < ba.length; i++){
    ba[i].style.background = "rgba(0,0,0,.1)";
  }
  ba[bi].style.background = "#999";
  setTimeout(function(){
    // Change the content
    _("bubblecontent").innerHTML = bca[bi];
    // Fade-in the content
    _("bubblecontent").style.opacity = 1;
  }, 300);
}
function bubbleSlide(){
  bi++;
  if(bi == ba.length){
    bi = 0;
  }
  bubbles(bi);
}
window.addEventListener("load", function(){
  ba = _("bubbles").children;
  intrvl = setInterval(bubbleSlide, 3000);
});
</script>
